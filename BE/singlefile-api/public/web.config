<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Configuración de PHP -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="index.html" />
            </files>
        </defaultDocument>

        <!-- Configuración de reescritura de URL para CodeIgniter -->
        <rewrite>
            <rules>
                <!-- Regla para manejar CORS OPTIONS requests -->
                <rule name="CORS Preflight" stopProcessing="true">
                    <match url="^(.*)$" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="OPTIONS" />
                    </conditions>
                    <action type="Rewrite" url="cors-handler.php" />
                </rule>
                
                <!-- Regla principal para CodeIgniter - redirigir todo a index.php -->
                <rule name="CodeIgniter Rewrite" stopProcessing="true">
                    <match url="^(.*)$" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <add input="{REQUEST_URI}" pattern="^/(assets|uploads|favicon\.ico|robots\.txt)" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php/{R:1}" />
                </rule>

                <!-- Regla para archivos estáticos del frontend Angular -->
                <rule name="Angular Static Files" stopProcessing="true">
                    <match url="^(assets/.*|.*\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|map))$" />
                    <action type="None" />
                </rule>

                <!-- Regla para SPA Angular - redirigir rutas del frontend a index.html -->
                <rule name="Angular Routes" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
                        <add input="{REQUEST_URI}" pattern="^/index\.php" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.html" />
                </rule>
            </rules>
        </rewrite>

        <!-- Configuración de MIME types -->
        <staticContent>
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
            <mimeMap fileExtension=".map" mimeType="application/json" />
        </staticContent>

        <!-- Configuración de seguridad -->
        <httpProtocol>
            <customHeaders>
                <!-- Headers de seguridad -->
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
            </customHeaders>
        </httpProtocol>

        <!-- Configuración de compresión -->
        <httpCompression>
            <dynamicTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="message/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/*" enabled="true" />
                <add mimeType="message/*" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </staticTypes>
        </httpCompression>

        <!-- Configuración de caché para archivos estáticos -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
        </staticContent>

        <!-- Configuración de errores personalizados -->
        <httpErrors errorMode="Custom" defaultResponseMode="ExecuteURL">
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" path="/index.php" responseMode="ExecuteURL" />
        </httpErrors>

        <!-- Configuración de PHP -->
        <handlers>
            <add name="PHP-FastCGI" path="*.php" verb="GET,POST,PUT,DELETE,HEAD,OPTIONS" modules="FastCgiModule" scriptProcessor="C:\php\php-cgi.exe" resourceType="Either" />
        </handlers>

        <!-- Configuración de directorios -->
        <directoryBrowse enabled="false" />
        
        <!-- Configuración de archivos ocultos -->
        <hiddenSegments>
            <add segment="app" />
            <add segment="writable" />
            <add segment="vendor" />
            <add segment="tests" />
            <add segment="scripts" />
        </hiddenSegments>

        <!-- Configuración de archivos protegidos -->
        <requestFiltering>
            <hiddenSegments>
                <add segment="app" />
                <add segment="writable" />
                <add segment="vendor" />
                <add segment="tests" />
                <add segment="scripts" />
                <add segment="env" />
                <add segment="composer.json" />
                <add segment="composer.lock" />
            </hiddenSegments>
            <fileExtensions>
                <add fileExtension=".env" allowed="false" />
                <add fileExtension=".log" allowed="false" />
            </fileExtensions>
        </requestFiltering>
    </system.webServer>
</configuration>
